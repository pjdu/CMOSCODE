<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 背景颜色 -->
	<solid android:color="@color/green_deep"/>
	<!-- 设置边框 -->
	<stroke android:width="2px"
	    android:color="#e0e0e0"/>
