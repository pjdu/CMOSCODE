<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:endColor="@color/blue_deep" android:startColor="@color/blue_deep" />

            <stroke android:width="1dp" android:color="@color/blue_deep" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:endColor="@color/blue_deep" android:startColor="@color/blue_deep" />

            <stroke android:width="1dp" android:color="@color/blue_deep" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <gradient android:angle="270" android:endColor="@color/gray" android:startColor="@color/gray" />

            <stroke android:width="0.5dp" android:color="@color/black8" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/blue2" android:startColor="@color/blue2" />

            <stroke android:width="1dp" android:color="@color/blue2" />
        </shape></item>

</selector>