<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/main"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white2"
              android:gravity="center"
              android:orientation="vertical">
    <include layout="@layout/toolbar"/>



    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
        <FrameLayout
                android:id="@+id/layout_needle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

            <FrameLayout
                    android:id="@+id/layout_common"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/common_img_desc"
                        android:src="@drawable/bg_speedometer"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/common_img_desc"
                        android:src="@drawable/speedometer_low"/>

                <ImageView
                        android:id="@+id/img_needle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/common_img_desc"
                        android:src="@drawable/needle"/>

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:contentDescription="@string/common_img_desc"
                        android:src="@drawable/needle_center"/>
            </FrameLayout>
        </FrameLayout>

        <TextView
                android:id="@+id/tv_unit"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_alignBottom="@+id/layout_needle"
                android:layout_centerInParent="true"
                android:layout_marginBottom="40dp"
                android:background="@drawable/speed_pit"
                android:gravity="center"
                android:padding="2dp"
                android:singleLine="false"
                android:text="@string/speed_unit_mbps"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"/>
        <TextView
                android:id="@+id/tv_nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-12dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/draw_bg_round_b"
                android:gravity="center"
                android:maxHeight="100dp"
                android:paddingBottom="2dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="2dp"
                android:textColor="@color/blue1"
                android:textSize="16sp"/>
        <Button
                android:id="@+id/btn_more_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/draw_bg_round_b"
                android:gravity="center"
                android:maxHeight="100dp"
                android:padding="5dp"
                android:textColor="@color/blue1"
                android:text="@string/speed_result"
                android:textSize="16sp"/>
    </FrameLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                <ProgressBar
                        android:id="@+id/pb_state"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="150dp"
                        android:layout_height="7dp"
                        android:visibility="gone"/>

                <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black5"
                        android:textSize="14sp"
                        android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/black_op2"
                    android:orientation="vertical"
                    android:padding="2dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="left|center_vertical"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginRight="5dp"
                            android:text="@string/speed_ping"
                            android:textColor="@color/black2"
                            android:textSize="14sp"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginRight="5dp"
                            android:text="@string/speed_max"
                            android:textColor="@color/black2"
                            android:textSize="14sp"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginRight="5dp"
                            android:text="@string/speed_down"
                            android:textColor="@color/black2"
                            android:textSize="14sp"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginRight="5dp"
                            android:text="@string/speed_up"
                            android:textColor="@color/black2"
                            android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="left|center_vertical"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/tv_ping"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginRight="5dp"
                            android:text="@string/speed_ping"
                            android:textColor="@color/black2"
                            android:textSize="14sp"/>
                    <LinearLayout android:orientation="vertical"
                                  android:layout_width="0dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight="1.0"
                                  android:gravity="center_horizontal"
                                  android:layout_marginRight="5dp">
                        <TextView
                                android:gravity="center"
                                android:id="@+id/tv_max_down"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/speed_max"
                                android:textColor="@color/black2"
                                android:textSize="14sp"
                                android:singleLine="true"
                                android:layout_weight="1.0"/>
                        <TextView
                                android:gravity="center"
                                android:id="@+id/tv_max_up"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/speed_max"
                                android:textSize="14sp"
                                android:singleLine="true"
                                android:layout_weight="1.0"/>
                    </LinearLayout>
                    <TextView
                            android:id="@+id/tv_down"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginRight="5dp"
                            android:text="@string/speed_down"
                            android:textColor="@color/black2"
                            android:textSize="14sp"/>

                    <TextView
                            android:id="@+id/tv_up"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginRight="5dp"
                            android:text="@string/speed_up"
                            android:textColor="@color/black2"
                            android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_marginTop="10dp"
                        android:id="@+id/chart_speed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/bg_btn_panle"
            android:gravity="center"
            android:orientation="horizontal">

        <Button
                android:id="@+id/btn_speed"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:background="@drawable/btn_blue_pressed"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="@string/speed_start"
                android:textColor="@color/white"
                android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>