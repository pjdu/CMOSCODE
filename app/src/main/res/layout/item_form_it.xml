<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_deep"
            android:gravity="left|center"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_eq"
                style="@style/text_title"
                android:background="@color/black5"
                android:drawableLeft="@drawable/ic_br_next"
                android:gravity="left|center"
                android:padding="5dp"
                android:singleLine="true"/>

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="1"
                android:stretchColumns="1">

            <TableRow android:layout_marginBottom="0.5dp">

                <TextView
                        style="@style/text_default"
                        android:layout_height="match_parent"
                        android:layout_marginRight="0.5dp"
                        android:background="@color/white"
                        android:gravity="left|center"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="@string/it_subeq"/>

                <TextView
                        android:id="@+id/tv_subeq"
                        style="@style/text_default"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:gravity="left|center"
                        android:padding="5dp"
                        android:singleLine="false"/>
            </TableRow>

            <TableRow android:layout_marginBottom="0.5dp">

                <TextView
                        style="@style/text_default"
                        android:layout_height="match_parent"
                        android:layout_marginRight="0.5dp"
                        android:background="@color/white"
                        android:gravity="left|center"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="@string/it_itemcotent"/>

                <TextView
                        android:id="@+id/tv_itcontent"
                        style="@style/text_default"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:gravity="left|center"
                        android:padding="5dp"
                        android:singleLine="false"/>
            </TableRow>

            <TableRow
                    android:id="@+id/tr_form_check"
                    android:layout_marginBottom="0.5dp"
                    android:background="@color/white">

                <CheckBox
                        android:id="@+id/cb_cok"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:layout_span="2"
                        android:text="@string/it_checkok"
                        android:textColor="@color/black"/>
            </TableRow>

            <TableRow
                    android:id="@+id/tr_form_input"
                    android:layout_marginBottom="0.5dp">

                <TextView
                        style="@style/text_default"
                        android:layout_height="match_parent"
                        android:layout_marginRight="0.5dp"
                        android:background="@color/white"
                        android:gravity="left|center"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="@string/it_result"/>

                <EditText
                        android:id="@+id/et_it_content"
                        style="@style/edit"
                        android:layout_height="50dp"/>
            </TableRow>

