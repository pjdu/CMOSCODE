<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/draw_bg_list"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="horizontal" >

        <View
            android:id="@+id/best_bad_other_img"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_question_best_answer"
            android:visibility="gone" />

        <TextView
            android:id="@+id/best_bad_other_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:textColor="@color/black"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/question_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/question_answer_userId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_default_usericon16"
            android:gravity="left|center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/question_answer_createTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_big_clock16"
            android:gravity="right|center"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>