<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/opacity"
              android:orientation="vertical">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/draw_bg_list_round"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_item_plan"
                style="@style/text_default"
                android:drawableLeft="@drawable/ic_order"
                android:gravity="left|center"
                android:minHeight="50dp"
                android:padding="5dp"
                android:singleLine="false"
                android:textSize="16sp"/>

        <ImageView
                android:id="@+id/img_plan_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:contentDescription="@string/it_splan"
                android:src="@drawable/ic_planed_right"
                android:visibility="invisible"/>
    </FrameLayout>

</LinearLayout>