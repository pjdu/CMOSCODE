<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white2"
    android:orientation="vertical" >

    <include layout="@layout/toolbar"/>

    <FrameLayout
        android:id="@+id/layout_needle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/common_img_desc"
            android:src="@drawable/bg_dial" />

        <ImageView
            android:id="@+id/img_level_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/common_img_desc"
            android:src="@drawable/pic_arrow_circle" />

        <ImageView
            android:id="@+id/img_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/common_img_desc"
            android:src="@drawable/ic_level_walker" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/draw_bg_round"
            android:orientation="vertical"
            android:padding="1dip" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:drawableLeft="@drawable/ic_speed_average"
                android:gravity="left|center"
                android:padding="5dip"
                android:text="@string/speed_up"
                android:textColor="@color/black5"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/tv_up"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:gravity="left|center"
                android:paddingLeft="20dip"
                android:text="@string/none"
                android:textColor="@color/blue1"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:drawableLeft="@drawable/ic_speed_average"
                android:gravity="left|center"
                android:padding="5dip"
                android:text="@string/speed_down"
                android:textColor="@color/black5"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/tv_down"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:gravity="left|center"
                android:paddingLeft="20dip"
                android:text="@string/none"
                android:textColor="@color/blue1"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:drawableLeft="@drawable/ic_speed_peak"
                android:gravity="left|center"
                android:padding="5dip"
                android:singleLine="true"
                android:text="@string/speed_max"
                android:textColor="@color/black5"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/gray" />

            <TextView
                android:id="@+id/tv_max"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:gravity="left|center"
                android:paddingLeft="20dip"
                android:singleLine="true"
                android:text="@string/none"
                android:textColor="@color/blue1"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>