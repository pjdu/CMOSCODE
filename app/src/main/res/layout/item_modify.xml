<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/draw_bg_app"
              android:orientation="vertical">

    <TextView
            android:id="@+id/tv_item_title"
            style="@style/text_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="left|center"
            android:textSize="16sp"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/tv_item_tips"
            style="@style/text_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="left|center"
            android:textColor="@color/red_warn"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/input_normal"
            android:gravity="center"
            android:orientation="horizontal">

        <EditText
                android:id="@+id/et_item_modify"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:inputType="text"/>

        <Button
                android:id="@+id/btn_item_modify"
                style="@style/btn_green"
                android:layout_width="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="0"
                android:drawableLeft="@drawable/ic_top_right_expand"
                android:padding="5dp"/>
    </LinearLayout>

</LinearLayout>