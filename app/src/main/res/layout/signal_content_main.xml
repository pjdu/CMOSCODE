<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white2"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.lte.LteSignalMainActivity"
    tools:showIn="@layout/activity_signal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/draw_bg_flat"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0.5dp"
            android:background="@color/blue2"
            android:gravity="left|center_vertical"
            android:padding="2dp"
            android:text="@string/sg_tm"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/layout_signal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="left|center"
            android:orientation="horizontal" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/draw_bg_round"
        android:gravity="center"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lv_info"
            style="@style/list_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:padding="5dp"></ListView>

        <Button
            android:id="@+id/btn_info_detail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="1dp"
            android:background="@drawable/draw_btn_blue"
            android:gravity="center"
            android:padding="5dp"
            android:singleLine="true"
            android:text="@string/sg_detail"
            android:textColor="@color/black5"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>