<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/draw_bg_app"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_title"
        style="@style/text_title"
        android:layout_height="45dp"
        android:background="@drawable/bg_header"
        android:gravity="center"
        android:text="@string/lte_bs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_text_panle"
        android:gravity="left"
        android:orientation="vertical"
        android:padding="5dp" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1" >

            <TableRow>

                <TextView
                    style="@style/text_default"
                    android:text="@string/common_area"
                    android:textColor="@color/green_deep" />

                <TextView
                    style="@style/text_default"
                    android:text="@string/common_town"
                    android:textColor="@color/green_deep" />
            </TableRow>

            <TableRow>

                <Spinner
                    android:id="@+id/sp_lte_bs_area"
                    style="@style/spinner_black"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/sp_lte_bs_town"
                    style="@style/spinner_black"
                    android:layout_weight="1" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/draw_input"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/edit_lte_bs_name"
                android:layout_width="match_parent"
                android:layout_height="32dip"
                android:layout_weight="1"
                android:background="#00000000"
                android:hint="@string/hint_name_bs" />

            <Button
                android:id="@+id/btn_lte_bs_query"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_margin="1dip"
                android:layout_weight="0"
                android:background="@drawable/draw_btn_search" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_dsc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_lte_bs_state"
            style="@style/text_default"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_green_light"
            android:gravity="center"
            android:text="@string/common_request"
            android:visibility="visible" />

        <ListView
            android:id="@+id/lv_lte_bs"
            style="@style/list_default"
        	android:layout_marginBottom="5dp"
        	android:layout_marginLeft="1dp"
        	android:layout_marginRight="1dp"
        	android:layout_marginTop="5dp"
        	android:layout_weight="1"
        	android:visibility="gone">
        </ListView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_lte_bs"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:visibility="gone" />

    <!-- <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/bg_btn_panle"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_new_lte_bs"
            style="@style/btn_green"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:text="@string/lte_new_bs" />
    </LinearLayout> -->

</LinearLayout>