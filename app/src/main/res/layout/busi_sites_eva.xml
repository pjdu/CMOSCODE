<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_busi_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/lleft"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="3"
        android:background="@drawable/ll_border" >

        <TextView
            android:id="@+id/tv_busi_eva_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical" 
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lright"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lright1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"        
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_busi_eva_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"   
                android:background="@drawable/tv_border"          
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_busi_eva_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:background="@drawable/tv_border"   
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_busi_eva_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" 
                android:background="@drawable/tv_border"   
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lright2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tv_busi_eva_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/tv_border"   
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>