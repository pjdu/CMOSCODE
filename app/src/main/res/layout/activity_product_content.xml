<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/draw_bg_app"
    android:orientation="vertical">

    <!--<TextView
        android:id="@+id/txt_title"
        style="@style/text_title"
        android:layout_height="45dp"
        android:background="@drawable/bg_header"
        android:gravity="center" />-->
    <include layout="@layout/toolbar"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/draw_bg_group_normal"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                style="@style/text_default"
                android:layout_margin="2dp"
                android:text="@string/pd_user_name" />

            <TextView
                android:id="@+id/txt_pd_user_name"
                style="@style/text_default"
                android:layout_margin="2dp"
                android:textColor="@color/green_deep" />
        </TableRow>

        <TableRow>

            <TextView
                style="@style/text_default"
                android:layout_margin="2dp"
                android:text="@string/pd_create_time" />

            <TextView
                android:id="@+id/txt_pd_create_time"
                style="@style/text_default"
                android:layout_margin="2dp"
                android:textColor="@color/green_deep" />
        </TableRow>
    </TableLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.17">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/text_default"
                android:layout_width="match_parent"
                android:background="@drawable/draw_bg_group_normal"
                android:gravity="left|center"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="@string/pd_maintenance"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_pd_maintenance"
                style="@style/text_default"
                android:layout_width="match_parent"
                android:gravity="left|center"
                android:singleLine="false" />

            <TextView
                style="@style/text_default"
                android:layout_width="match_parent"
                android:background="@drawable/draw_bg_group_normal"
                android:gravity="left|center"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="@string/pd_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_pd_size"
                style="@style/text_default"
                android:layout_width="match_parent"
                android:gravity="left|center"
                android:singleLine="false" />

            <TextView
                style="@style/text_default"
                android:layout_width="match_parent"
                android:background="@drawable/draw_bg_group_normal"
                android:gravity="left|center"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="@string/pd_structure"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_pd_structure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/pd_structure" />

            <TextView
                style="@style/text_default"
                android:layout_width="match_parent"
                android:background="@drawable/draw_bg_group_normal"
                android:gravity="left|center"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="@string/pd_appearance"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_pd_appearance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/pd_appearance" />

            <TextView
                style="@style/text_default"
                android:layout_width="match_parent"
                android:background="@drawable/draw_bg_group_normal"
                android:gravity="left|center"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="@string/pd_performance"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_pd_performance"
                style="@style/text_default"
                android:layout_width="match_parent"
                android:gravity="left|center"
                android:singleLine="false" />

            <TextView
                style="@style/text_default"
                android:layout_width="match_parent"
                android:background="@drawable/draw_bg_group_normal"
                android:gravity="left|center"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="@string/pd_feature"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_pd_feature"
                style="@style/text_default"
                android:layout_width="match_parent"
                android:gravity="left|center"
                android:singleLine="false" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/bg_btn_panle"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_query_offer"
            style="@style/btn_blue"
            android:layout_width="0dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="@string/query_offer"
            tools:ignore="NestedWeights" />
    </LinearLayout>

</LinearLayout>