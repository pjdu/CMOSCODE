<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOrangeLight</item>
        <item name="colorPrimaryDark">@color/colorOrangeLight</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">false</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="layout_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_header</item>
    </style>

    <style name="text_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:background">@color/opacity</item>
        <item name="android:lines">1</item>
    </style>

    <style name="text_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="list_default">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:cacheColorHint">@color/opacity</item>
        <item name="android:divider">@color/gray</item>
        <item name="android:dividerHeight">0.5sp</item>
    </style>

    <style name="btn_green">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/draw_btn_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_primary">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/draw_btn_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_red">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/draw_btn_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_white">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/draw_btn_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="edit">
        <item name="android:layout_height">40dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/draw_input</item>
    </style>

    <style name="spinner_black">
        <item name="android:layout_margin">3dip</item>
        <item name="android:padding">0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/draw_spinner_black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="spinner_white">
        <item name="android:layout_margin">3dip</item>
        <item name="android:padding">0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/draw_spinner_white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="anim_fade" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="anim_slide" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in</item>
        <item name="android:windowExitAnimation">@anim/slide_out</item>
    </style>

    <!-- for trouble -->
    <style name="btn_blue">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/draw_btn_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    <!--天意感知-->
    <style name="TitleText1Appearance">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TimeTextAppearance">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#88000000</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TitleText2Appearance">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Widget.Note" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/note_spacing</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="contentPadding">@dimen/note_content_spacing</item>
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardCornerRadius">@dimen/note_corner_radius</item>
    </style>

    <style name="TextAppearance.Note" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_black_87</item>
        <item name="android:textSize">@dimen/note_textsize</item>
    </style>

    <style name="TextAppearance.Note.Title" parent="TextAppearance.Note">
        <item name="android:textSize">@dimen/note_title_textsize</item>
    </style>


    <style name="TransparentToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support Library compability -->
        <item name="windowActionBarOverlay">true</item>
    </style>

</resources>
